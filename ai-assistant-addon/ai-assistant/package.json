    "type": "module",
    "main": "../dist/ai-assistant/main.js",
    "files": [
        "../dist/ai-assistant/*"
    ],
    "private": true,
    "scripts": {
        "build": "webpack --config ./webpack.prod.config.js --progress",
        "dev": "webpack serve --config ./webpack.dev.config.js --progress --env target=https://domain.com manifest=../manifest.json config=../ai-assistant-addon.config.json",
        "pack": "sites-extensions pack --manifest=../manifest.json --input=../dist --output=../",
        "prepack": "npm run build",
        "lint": "eslint . --fix && prettier --write \"src/**/*\""
    },
